# Auto detect text files and normalize line endings to LF
* text=auto

# Shell scripts should always have LF line endings
*.sh text eol=lf

# Batch files should always have CRLF line endings
*.bat text eol=crlf
*.cmd text eol=crlf

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf

# Java files
*.java text eol=lf
*.kt text eol=lf

# Config files
*.xml text eol=lf
*.gradle text eol=lf
*.properties text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
